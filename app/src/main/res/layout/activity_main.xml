<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/navigation_bar_zb"
        android:gravity="center"
        android:text="直播頻道"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <GridView
        android:id="@+id/live_cat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="234dp"
        android:layout_marginRight="234dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:horizontalSpacing="64dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:verticalSpacing="30dp"></GridView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"></RelativeLayout>
</LinearLayout>