<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@mipmap/navigation_bar_zb"
            android:gravity="center"
            android:text="直播頻道"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <GridView
            android:id="@+id/live_cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="234dp"
            android:layout_marginRight="234dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:horizontalSpacing="64dp"
            android:numColumns="5"
            android:scrollbars="none"
            android:verticalSpacing="30dp"></GridView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ad_left"
            android:layout_width="142dp"
            android:layout_height="322dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ad_right"
            android:layout_width="142dp"
            android:layout_height="322dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ad_top"
            android:layout_width="322dp"
            android:layout_height="142dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ad_bottom"
            android:layout_width="322dp"
            android:layout_height="142dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</FrameLayout>